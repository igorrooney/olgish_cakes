# Development Environment Variables for Olgish Cakes
# Copy the values from your Vercel dashboard

# Sanity CMS Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2025-03-31
SANITY_API_TOKEN=your_sanity_api_token

# Data Fetching Configuration
NEXT_PUBLIC_USE_REAL_TIME_DATA=false

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://olgishcakes.co.uk

# Email Configuration
RESEND_API_KEY=your_resend_api_key
CONTACT_EMAIL_TO=hello@olgishcakes.co.uk
NEXT_PUBLIC_EMAIL_FROM=hello@olgishcakes.co.uk

# Business Contact Information
# Phone number is now stored in lib/constants.ts

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Appwrite Configuration
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_appwrite_project_id
APPWRITE_API_KEY=your_appwrite_api_key
APPWRITE_DATABASE_ID=your_appwrite_database_id

# Appwrite Collection IDs
APPWRITE_USERS_PRIVATE_COLLECTION_ID=users_private
APPWRITE_ADDRESSES_COLLECTION_ID=addresses
APPWRITE_PRODUCTS_COLLECTION_ID=products
APPWRITE_CATEGORIES_COLLECTION_ID=categories
APPWRITE_ORDERS_COLLECTION_ID=orders
APPWRITE_ORDER_ITEMS_COLLECTION_ID=order_items

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Optional: Pre-defined Stripe Price IDs for gift hampers
STRIPE_PRICE_HAMPER_CLASSIC=price_your_hamper_price_id


